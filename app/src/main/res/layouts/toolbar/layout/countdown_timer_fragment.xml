<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
tools:context=".views.ui.game.CountdownTimerFragment">
    <FrameLayout
    android:id="@+id/fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="85dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/game_dashboard_toolbar">

        <androidx.appcompat.widget.Toolbar
        android:id="@+id/countdown_timer_toolbar"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/colorPureWhite"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorPureWhite"
                android:gravity="center|center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/savvyHoursTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:text="Savvy is live from 8-9PM"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/stopwatchImageView"
                    android:layout_width="35dp"
                    android:layout_height="20dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/stopwatch" />

                <TextView
                    android:id="@+id/timeLeftTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11:28:48 Left"
                    android:textColor="@color/colorPrimaryPink"
                    android:textStyle="bold" />

            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>
    </FrameLayout>
</layout>



