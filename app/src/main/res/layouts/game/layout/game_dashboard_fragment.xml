        -->

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/col2ConstraintLayout"
        android:layout_width="82dp"
        android:layout_height="196dp"
