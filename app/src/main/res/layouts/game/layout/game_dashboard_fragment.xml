        android:tint="@color/colorGameDashboardGreyLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/line4"
        android:layout_width="3dp"
        android:layout_height="565dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="56dp"
        android:scaleY="2"
        android:src="@drawable/ic_rectangle"
        android:tint="@color/colorGameDashboardGreyLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/col0ConstraintLayout"
        android:layout_width="118dp"
        android:layout_height="428dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="132dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:backgroundTint="#00FFFFFF"
            android:scaleType="centerCrop"
            android:src="@drawable/polygon_copy"
            app:layout_constraintBottom_toTopOf="@+id/inviteButton1"
            app:layout_constraintEnd_toEndOf="@+id/inviteButton1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="spread_inside" />

        <ImageButton
            android:id="@+id/inviteButton1"
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:backgroundTint="#00FFFFFF"
            android:scaleType="centerCrop"
            android:src="@drawable/polygon_copy"
            app:layout_constraintBottom_toTopOf="@+id/imageButton3"
            app:layout_constraintEnd_toEndOf="@+id/imageButton3"
            app:layout_constraintTop_toBottomOf="@+id/imageButton" />

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="match_parent"
            android:layout_height="99dp"
